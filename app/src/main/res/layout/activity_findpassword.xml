<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <bupt.com.travelandroid.DesiginView.BackTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawable_back="@drawable/back"
        app:title="找回密码"
        android:id="@+id/bt_title"
        >
    </bupt.com.travelandroid.DesiginView.BackTitle>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="27dp"
        >
        <bupt.com.travelandroid.DesiginView.EditTextPlus
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etp_phone"
            app:hint="请输入手机号码"
            >
        </bupt.com.travelandroid.DesiginView.EditTextPlus>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mgray"
            />
        <bupt.com.travelandroid.DesiginView.EditTextPlus
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etp_code"
            android:layout_marginTop="20dp"
            app:line="true"
            app:right_hint="获取验证码"
            app:hint="请输入验证码"
            >
        </bupt.com.travelandroid.DesiginView.EditTextPlus>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mgray"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/buttonGreenStyle"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp"
        android:id="@+id/bt_next_step"
        android:text="下一步"
        />
</LinearLayout>