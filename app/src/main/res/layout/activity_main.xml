<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bupt.com.travelandroid.MainActivity">



    <LinearLayout
        android:id="@+id/ll_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <TextView
            android:background="@drawable/circle_rectangle"
            android:layout_width="255dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="手机号登录"
            android:gravity="center"
            android:textColor="@color/mgreen"
            android:clickable="true"
            android:id="@+id/tv_phone_login"
            />
        <TextView
            android:background="@drawable/circle_rectangle"
            android:layout_width="255dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:gravity="center"
            android:textColor="@color/mgreen"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:id="@+id/tv_register"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ll_login_register"
        android:layout_marginBottom="70dp"
        />

    <include layout="@layout/main_bottom"></include>
</RelativeLayout>
