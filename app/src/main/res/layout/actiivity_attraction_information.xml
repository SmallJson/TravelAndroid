<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attraction_information"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:fitsSystemWindows="true"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:id="@+id/tl_bar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/iv_back"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="天安门"
                    android:textSize="22sp"
                    android:textColor="#101010"
                    android:id="@+id/tv_placeName"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <bupt.com.travelandroid.DesiginView.MNestScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.baidu.mapapi.map.MapView
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/mv_map"
                android:layout_width="match_parent"
                android:layout_height="260dp" >
            </com.baidu.mapapi.map.MapView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/book"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/book"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/attraction_introduction"
                        android:text="天安门，坐落在中华人民共和国首都北京市的中心、故宫的南端，与天安门广场以及人民英雄纪念碑、毛主席纪念堂、人民大会堂、中国国家博物馆隔长安街相望，占地面积4800平方米，以杰出的建筑艺术和特殊的政治地位为世人所瞩目。"
                        android:layout_toRightOf="@id/book"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/attraction_introduction"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/place_grern"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/position"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/attraction_position"
                        android:text="北京市东城区天安门"
                        android:layout_toRightOf="@id/position"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:text="导航"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:padding="0dp"
                        android:background="@drawable/circle_rectangle_mgreen"
                        android:layout_marginRight="18dp"
                        android:id="@+id/navigate"
                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/attraction_position"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/clock"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/time"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/attraction_open_time"
                        android:text="全天开放"
                        android:layout_toRightOf="@id/time"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/attraction_open_time"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bus"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/bus"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/attraction_traffic"
                        android:text="公交路线
1、2、5、7、9、10、17、20、22、44、48、53、54、59、110、120、309支、特1、特2、特3、特4、703、726、729、742、803、808、819、826、848、859、922路可以到达。
地铁路线
地铁1号线天安门东、天安门西，2号线前门站。"
                        android:layout_toRightOf="@id/bus"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/attraction_traffic"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </bupt.com.travelandroid.DesiginView.MNestScrollView>
</LinearLayout>
