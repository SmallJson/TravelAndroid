<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/homeBackground"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        >
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:gravity="center"
            android:background="@drawable/circle_rectangle_bule_inner"
            android:id="@+id/iv_icon_left"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_icon_left"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="莫小刀"
                android:id="@+id/tv_message_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#101010"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="20:33"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                android:id="@+id/tv_message_time"
                android:textColor="#9B9B9B"
                />
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/tv_message_time"
                android:background="@drawable/circle_red"
                android:id="@+id/fl_unread_msg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="1"
                    android:layout_gravity="center"
                    android:id="@+id/tv_unread_message"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="消息:简要内容"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:id="@+id/tv_message_dsc"
                android:layout_below="@id/tv_message_title"
                android:layout_alignParentStart="true"
                android:textColor="#9B9B9B"
                android:layout_marginRight="50dp"
                android:ellipsize="end"
                />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
